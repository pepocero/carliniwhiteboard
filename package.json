{
  "name": "carlini-whiteboard",
  "version": "1.0.0",
  "description": "Personal whiteboard application similar to Miro",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "db:create": "wrangler d1 create carlini-whiteboard-db",
    "db:migrate": "wrangler d1 migrations apply carlini-whiteboard-db",
    "db:seed": "wrangler d1 execute carlini-whiteboard-db --file=./worker/schema.sql"
  },
  "dependencies": {
    "@tiptap/extension-color": "^2.1.13",
    "@tiptap/extension-text-style": "^2.1.13",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "@types/uuid": "^10.0.0",
    "konva": "^9.2.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.10",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wrangler": "^3.19.0"
  }
}
